.post-container
    .post-content.transparency-grid img
        background: url('../img/transparency_grid.png')

    text-align: center
    .post-content
        text-align: left
        margin: 0 auto
        position: relative

        .resize-listener
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            width: 100%
            height: 100%

        img
            image-orientation: from-image
